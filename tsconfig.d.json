{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src/lib_components",
    "outDir": "./lib",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "newLine": "lf"
  },
  "include": [
    "./src/lib_components/components/**/*",
    "./src/lib_components/flow/**/*",
    "./src/lib_components/service/**/*",
    "./src/lib_components/types/**/*",
    "./src/lib_components/util/**/*",
    "./src/lib_components/*.js",
    "./src/lib_components/*.jsx",
    "./src/lib_components/*.ts",
    "./src/lib_components/*.tsx"
  ],
  "exclude": [
    "./src/**/StyleGuide.*",
    "./src/components/*",
    "./src/components/app/*",
    "./src/lib_components/remoteAssets/*",
    "./src/lib_components/vendor/**/*",
    "./src/favicon/*",
    "./src/sampleData/*",
    "./src/*.js",
    "./src/*.jsx",
    "./src/*.ts",
    "./src/*.tsx",
    "./**/__tests__/*"
  ]
}
